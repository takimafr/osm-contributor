                android:id="@+id/dialog_edit_month_mar_check"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mar"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingEnd="16dp"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:paddingStart="16dp"
                android:layout_margin="8dp"
                android:background="@drawable/checkbox_day"
                app:typeface="Roboto-Light.ttf"
                android:textSize="18sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <io.jawg.osmcontributor.ui.utils.views.customs.TextViewCheck
                android:id="@+id/dialog_edit_month_apr_check"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Apr"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingEnd="16dp"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:paddingStart="16dp"
                android:layout_margin="8dp"
                android:background="@drawable/checkbox_day"
                app:typeface="Roboto-Light.ttf"
                android:textSize="18sp"/>

            <io.jawg.osmcontributor.ui.utils.views.customs.TextViewCheck
                android:id="@+id/dialog_edit_month_may_check"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="May"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingEnd="16dp"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:paddingStart="16dp"
                android:layout_margin="8dp"
                android:background="@drawable/checkbox_day"
                app:typeface="Roboto-Light.ttf"
                android:textSize="18sp"/>

            <io.jawg.osmcontributor.ui.utils.views.customs.TextViewCheck
                android:id="@+id/dialog_edit_month_jun_check"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
