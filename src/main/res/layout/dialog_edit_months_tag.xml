            <io.jawg.osmcontributor.ui.utils.views.customs.TextViewCheck
                android:id="@+id/dialog_edit_month_dec_check"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Dec"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingEnd="16dp"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:paddingStart="16dp"
                android:layout_margin="8dp"
                android:background="@drawable/checkbox_day"
                app:typeface="Roboto-Light.ttf"
                android:textSize="18sp"/>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@id/dialog_edit_day_buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingEnd="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingStart="16dp">

        <Button
            android:id="@+id/dialog_edit_month_ok_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:text="@string/ok"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"/>

        <Button
            android:id="@+id/dialog_edit_month_cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:text="@string/cancel"
            android:textColor="@color/disable_text"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"/>
    </FrameLayout>

</LinearLayout>