<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:minWidth="1000dp">

    <io.jawg.osmcontributor.ui.utils.views.customs.TypeFaceTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login_title"
        android:textSize="25sp"
        android:textColor="@android:color/black"
        app:typeface="RobotoCondensed-Regular.ttf"
        android:layout_marginBottom="16dp"/>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/TextInputLayout">

        <io.jawg.osmcontributor.ui.utils.views.customs.TypeFaceTextInputEditText
            android:id="@+id/dialog_connection_login_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/prompt_login"
            android:inputType="textNoSuggestions"
            android:textSize="15sp"
            app:typeface="Roboto-Light.ttf" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/TextInputLayout">

        <io.jawg.osmcontributor.ui.utils.views.customs.TypeFaceTextInputEditText
            android:id="@+id/dialog_connection_password_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/prompt_password"
            android:inputType="textPassword"
            android:textSize="15sp"
            app:typeface="Roboto-Light.ttf" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/dialog_connection_login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorPrimaryDark"
        android:text="@string/login_verb"
        android:textColor="@android:color/white"
        android:layout_margin="16dp"/>

    <io.jawg.osmcontributor.ui.utils.views.customs.TypeFaceTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:typeface="Roboto-Light.ttf"
        android:text="@string/login_using"
        android:gravity="center"
        android:layout_margin="16dp"/>

    <Button
        android:id="@+id/dialog_connection_google_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_google"
        android:text="@string/google"
        android:background="@android:color/transparent"
        android:layout_gravity="center"
        android:textAllCaps="false"/>

    <io.jawg.osmcontributor.ui.utils.views.customs.TypeFaceTextView
        android:id="@+id/dialog_connection_login_later"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:layout_gravity="right"
        app:typeface="Roboto-Light.ttf"
        android:text="@string/login_later"/>
</LinearLayout>