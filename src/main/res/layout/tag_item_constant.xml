<RelativeLayout android:id="@+id/card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingLeft="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingRight="16dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp">

        <io.jawg.osmcontributor.ui.utils.views.customs.TypeFaceTextView
            android:id="@+id/poi_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#757575"
            android:textSize="20sp"
            app:typeface="Roboto-Light.ttf"/>

        <io.jawg.osmcontributor.ui.utils.views.customs.TypeFaceTextView
            android:id="@+id/poi_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/poi_key"
            android:textColor="#bdbdbd"
            android:textSize="17sp"
            app:typeface="Roboto-Light.ttf"/>
    </RelativeLayout>

</RelativeLayout>