<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:key="@string/shared_prefs_expert_mode"
        android:summary="@string/expert_mode_summary"
        android:title="@string/expert_mode_title"/>

    <Preference
        android:key="@string/shared_prefs_reset"
        android:summary="@string/reset_summary"
        android:title="@string/reset_title"/>

    <Preference
        android:key="@string/shared_prefs_reset_type"
        android:summary="@string/reset_type_summary"
        android:title="@string/reset_type_title"/>

    <CheckBoxPreference
        android:key="@string/shared_prefs_auto_commit"
        android:summary="@string/auto_commit_summary"
        android:title="@string/auto_commit_title"/>

    <PreferenceCategory
        android:title="@string/shared_prefs_h2geo_title">

        <Preference
            android:inputType="none"
            android:key="@string/shared_prefs_h2geo_version"
            android:title="Version"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/shared_prefs_login_title">

        <Preference
            android:inputType="none"
            android:key="@string/shared_prefs_google_connection_key"
            android:title="@string/shared_prefs_google_connection"
            android:icon="@drawable/ic_google"/>

        <EditTextPreference
            android:inputType="textNoSuggestions"
            android:key="@string/shared_prefs_login"
            android:summary="@string/summary_login"
            android:title="@string/prompt_login"/>

        <EditTextPreference
            android:inputType="textPassword"
            android:key="@string/shared_prefs_password"
            android:summary="@string/summary_password"
            android:title="@string/prompt_password"/>

        <Preference
            android:inputType="none"
            android:key="@string/shared_prefs_server_key"
            android:title="@string/shared_prefs_server"/>
    </PreferenceCategory>

</PreferenceScreen>
